<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>mycreator</display-name>
	<welcome-file-list>
		<welcome-file>views/jsp/addnewuser.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>mycreator.controller.LoginController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/resetpassword</url-pattern>
		<url-pattern>/adminpage</url-pattern>
		<url-pattern>/studentpage</url-pattern>
	</servlet-mapping>
	

	<servlet>
		<servlet-name>StudentController</servlet-name>
		<servlet-class>mycreator.controller.StudentController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>StudentController</servlet-name>
		<url-pattern>/addnewuser</url-pattern>
		<url-pattern>/studentdetails</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AdminController</servlet-name>
		<servlet-class>mycreator.controller.AdminController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AdminController</servlet-name>
		<url-pattern>/departement</url-pattern>
		<url-pattern>/department/delete</url-pattern>
		<url-pattern>/department/edit</url-pattern>
		<url-pattern>/department/add</url-pattern>
		<url-pattern>/department/save</url-pattern>
		<url-pattern>/department/update</url-pattern>
		
		<url-pattern>/branch</url-pattern>
		<url-pattern>/branch/delete</url-pattern>
		<url-pattern>/branch/edit</url-pattern>
		<url-pattern>/branch/add</url-pattern>
		<url-pattern>/branch/save</url-pattern>
		<url-pattern>/branch/update</url-pattern>
		
		<url-pattern>/batchperiod</url-pattern>
		<url-pattern>/batchperiod/branch</url-pattern>
		<url-pattern>/batchperiod/delete</url-pattern>
		<url-pattern>/batchperiod/edit</url-pattern>
		<url-pattern>/batchperiod/add</url-pattern>
		<url-pattern>/batchperiod/save</url-pattern>
		<url-pattern>/batchperiod/update</url-pattern>
		
		<url-pattern>/compliationstatus</url-pattern>
		<url-pattern>/viewStudentDetails</url-pattern>
		
	</servlet-mapping>
	
		<servlet>
		<servlet-name>UserController</servlet-name>
		<servlet-class>mycreator.controller.UserController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserController</servlet-name>
		<url-pattern>/previousstatus</url-pattern>
		<url-pattern>/dailyupdates</url-pattern>
		<url-pattern>/currentstatus</url-pattern>
		<url-pattern>/updateIdidStatus</url-pattern>
		
	</servlet-mapping>
















	
</web-app>